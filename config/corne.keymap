#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
        keymap {
                compatible = "zmk,keymap";

                default_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
// | GUI  |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  | QUOT |
// | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
//                    | CTRL| LWR | SPC |   |ENTR | RSE  | ALT |
                        display-name = "Base";
                        bindings = <
   &kp TAB   &kp Q &kp W  &kp E     &kp R &kp T       &kp Y    &kp U  &kp I     &kp O   &kp P    &kp BSPC
   &kp LGUI  &kp A &kp S  &kp D     &kp F &kp G       &kp H    &kp J  &kp K     &kp L   &kp SEMI &kp SINGLE_QUOTE
   &kp LSHFT &kp Z &kp X  &kp C     &kp V &kp B       &kp N    &kp M  &kp COMMA &kp DOT &kp FSLH &kp ESC
                          &kp LCTRL &mo 1 &kp SPACE   &kp RET  &mo 2  &kp RALT
                        >;
                };
                lower_layer {
// ------------------------------------------------------------------------------------------------------------------------------
// |  `   |     |     |  UP |     |     |                                        |     |  7  |  8  |  9  |  0  | BKSP |
// | PLPA |     | LFT | DWN | RGT |     |                                        |     |  4  |  5  |  6  | VOLU|  PRV |
// | MUTE |     |     |     |     |     |                                        |  0  |  1  |  2  |  3  | VOLD|  NXT |
//                    | GUI |     | SPC |                                        |BSPC |     | ALT |
                        display-name = "Lower";
                        bindings = <
   &kp GRAVE        &trans       &trans       &kp UP       &trans       &trans         &trans   &kp N7   &kp N8  &kp N9    &kp N0            &kp BSPC
   &kp K_PLAY_PAUSE &trans       &kp LEFT     &kp DOWN     &kp RIGHT    &trans         &trans   &kp N4   &kp N5  &kp N6    &kp K_VOLUME_UP   &kp K_PREV
   &kp K_MUTE       &trans       &trans       &trans       &trans       &trans         &kp N0   &kp N1   &kp N2  &kp N3    &kp K_VOLUME_DOWN &kp K_NEXT
                          	              &kp LGUI     &trans       &kp SPACE      &kp BSPC &trans   &kp RALT
                        >;
                };

                raise_layer 
// -----------------------------------------------------------------------------------------
// |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
// | CTRL |  [  |  ]  |  {  |  }  |     |   |  =  |  -  |  <  |  >  |  \  |  `   |
// | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
//                    | GUI |     | SPC |   | ENT |     | ALT |
                        display-name = "Raise";
                        bindings = <
   &kp  TAB  &kp EXCL &kp AT   &kp HASH &kp DLLR   &kp PRCNT   &kp CARET &kp AMPS  &kp KP_MULTIPLY &kp LPAR         &kp RPAR &kp BSPC
   &kp LCTRL &kp LBKT &kp RBKT &kp LBRC &kp RBRC   &trans      &kp EQUAL &kp MINUS &kp LESS_THAN   &kp GREATER_THAN &kp BSLH &kp GRAVE
   &kp LSHFT &trans   &trans   &trans   &trans     &trans      &kp UNDER &kp PLUS  &kp LBRC        &kp RBRC         &kp PIPE &kp TILDE
                    	       &kp LGUI &trans     &kp SPACE   &kp RET   &trans    &kp RALT
                        >;
                };
        };
};
